<div class="container">

  <div class="row">
    <div class="text-center">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#mynewticket">
          Create Ticket
        </button>
    </div>
  </div>

  <br>
  <hr>

  <div class="row" id="container_tickets">
    <div class="col-xs-4">
        Bubbles go here.
    </div>
    <div class="col-xs-8">
      <%= render @tickets %>
    </div>
  </div>

  <!-- Modal  create action -->
    <%= form_for(@ticket, remote: true) do |f| %>

      <div class="modal fade" id="mynewticket" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

      <div class="modal-dialog">

        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">New Ticket</h4>
          </div>

          <div class="modal-body">
            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_area :name, class: "form-control ticket_name" %>
            </div>

          <div class="modal-body">
            <div class="field">
              <%= f.label :email %><br>
              <%= f.text_area :email, class: "form-control ticket_email" %>
            </div>

          <div class="modal-body">
            <div class="field">
              <%= f.label :subject %><br>
              <%= f.text_area :subject, class: "form-control ticket_subject" %>
            </div>

            <div class="field">
              <%= f.label :content %><br>
              <%= f.text_area :content, class: "form-control ticket_content" %>
            </div>

          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewticketclose">Close</button>
            <%= submit_tag "Create", class: "btn btn-primary" %>
          </div>
        </div>
        </div>
      </div>
      </div>
    <% end %>
  <!-- Modal -->

</div>
